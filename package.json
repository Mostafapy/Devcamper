{
   "name": "devcamper_api",
   "version": "1.0.0",
   "description": "Devcamper backend API",
   "main": "server.js",
   "scripts": {
      "test": "mocha ./test/**.spec.js --exit",
      "start": "NODE_ENV=production node server",
      "dev": "nodemon server",
      "seed-import": "node seeder -i",
      "seed-delete": "node seeder -d",
      "pre-commit": "npm run prettier && lint-staged",
      "prettier": "prettier --single-quote true --trailing-comma  all --tab-width 3  --write \"./**/*.{js,json}\""
   },
   "author": "Mostafapy",
   "license": "MIT",
   "dependencies": {
      "bcrypt": "^4.0.1",
      "colors": "^1.4.0",
      "cookie-parser": "^1.4.5",
      "dotenv": "^8.2.0",
      "express": "^4.17.1",
      "express-fileupload": "^1.1.6",
      "jsonwebtoken": "^8.5.1",
      "mocha": "^7.0.0",
      "mongoose": "^5.8.4",
      "morgan": "^1.9.1",
      "node-geocoder": "^3.25.0",
      "nodemailer": "^6.4.14",
      "slugify": "^1.3.6",
      "winston": "^3.2.1"
   },
   "devDependencies": {
      "babel": "^6.23.0",
      "babel-eslint": "^10.0.3",
      "eslint": "^6.8.0",
      "eslint-config-airbnb-base": "^14.0.0",
      "eslint-config-prettier": "^6.9.0",
      "eslint-plugin-import": "^2.19.1",
      "eslint-plugin-mocha": "^6.2.2",
      "eslint-plugin-prettier": "^3.1.2",
      "husky": "^3.1.0",
      "lint-staged": "^9.5.0",
      "nodemon": "^2.0.2",
      "prettier": "^1.19.1"
   },
   "lint-staged": {
      "*.js": [
         "eslint",
         "git add"
      ]
   },
   "husky": {
      "hooks": {
         "pre-commit": "npm run pre-commit"
      }
   }
}
